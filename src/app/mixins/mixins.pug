mixin field-calendar(id, _label)
  - var input_id = "input_" + id
  - var btn_id = "btn_" + id
  .field
      label= _label
      .control.has-addons
        input.input.is-small(id=input_id)
        button.is-icon(id=btn_id)
            i.far.fa-calendar-alt.icon-button

mixin field-plus-minus(id, _label)
  - var input_id = "input_" + id
  - var btn_plus_id = "btn_plus_" + id
  - var btn_minus_id = "btn_minus_" + id
  .field
      label= _label
      .control.has-addons
        input.input.is-small(id=input_id)
        button.is-icon.is-green(id=btn_plus_id)
            i.fas.fa-plus-circle.fas-lg.icon-button
        button.is-icon.is-red(id=btn_minus_id)
            i.fas.fa-minus-circle.fas-lg.icon-button

mixin field-options(id, ...items)
  .field
      .control
        each item in items
          input(type="radio" name=id value=item.key)
          = item.value
          br

